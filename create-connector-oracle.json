{
  "name": "oracle-sink",
  "config": {
    "connector.class": "io.debezium.connector.jdbc.JdbcSinkConnector",

    "connection.url": "jdbc:oracle:thin:@//oracle-db:1521/xepdb1",
    "connection.username": "CDC_USER",          // ← user_name created 
    "connection.password": "MyOraclePwd123",
    "jdbc.driver": "oracle.jdbc.OracleDriver",  // ← driver.jar

    "topics": "sqlserver.Test_DB.dbo.employee",
    "table.name.format": "SQLSERVER_DBO_EMPLOYEE",

    "insert.mode": "upsert",
    "primary.key.mode": "record_value",
    "primary.key.fields": "id",

    "schema.evolution": "basic",
    "hibernate.dialect": "org.hibernate.dialect.Oracle12cDialect",

    /* ── un-wrap Debezium envelope ── */
    "transforms": "unwrap",
    "transforms.unwrap.type": "io.debezium.transforms.ExtractNewRecordState",
    "transforms.unwrap.drop.tombstones": "true",
    "transforms.unwrap.delete.handling.mode": "none",

    /* ── JSON Convert ── */
    "key.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "key.converter.schemas.enable": "false",
    "value.converter.schemas.enable": "true",

    "tasks.max": "1"
  }
}

